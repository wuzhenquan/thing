{
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {},
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "classes": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": ["off", "tab"],
    "quotes": ["off", "double"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }],
    "no-undef": 2,
    "no-class-assign": "warn",
    "no-console": "warn",
    "require-yield": "warn"
  }
}
